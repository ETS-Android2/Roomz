<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    android:padding="15dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_layout_roomName_textView"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="0.7"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Room name1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_layout_secured_icon_imageView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_lock_lock" />

        <ImageView
            android:id="@+id/item_layout_mute_icon_imageView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:src="@android:drawable/ic_lock_silent_mode" />

        <TextView
            android:id="@+id/item_layout_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="19:25"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/Gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <com.rockerhieu.emojicon.EmojiconTextView
            android:id="@+id/item_layout_lastMsg_emojiconTextView"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="so hey! how&apos;s it going???"
            android:textColor="@color/Gray" />

        <TextView
            android:id="@+id/item_layout_unseen_msg_counter_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/abc_ab_share_pack_holo_light"
            android:gravity="center_horizontal"
            android:padding="1dp"
            android:text="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/holo_blue"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>